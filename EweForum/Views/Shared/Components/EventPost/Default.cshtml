@model PostViewModel
<div>
    <div class="card mt-3 mb-3" style="width: 48rem;">
        <div class="card-body">
            <h5 class="card-title mb-3">@Model.EventTitle</h5>
            <div>
                <p class="card-text mt-3 text-justify">@Model.EventDescription</p>
            </div>
            <div class="text-center event-date-time m-3">
                @if (Model.Start != null && Model.End != null && Model.Start != "" &&  Model.End!= null && Model.End != "")
                {
                    <div>
                        <strong>From @Model.Start To @Model.End</strong>
                    </div>
                }
                else
                {
                    <div>
                        <strong>On @Model.Start</strong>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="mt-1 mb-4 d-none text-lg-center rounded-3" style="width: 23rem; background-color:pink; border:2px solid #DB7093">
        <strong style="color:black">Likes</strong>
    </div>
</div>