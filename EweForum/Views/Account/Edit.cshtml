@model ForumUserEditViewModel
@{
    ViewData["Title"] = "Edit Profile";
}
<section >
    <div class="form-outer edit">
        <div class="form-inner">
            <form enctype="multipart/form-data" asp-controller="Account" asp-action="Edit">
                <input type="hidden" asp-for="@Model.Username"/>
                @if(Model.AvatarName == null || Model.AvatarName.Trim() == "")
                {
                    <div class="form-warning">.
                        You haven't set your profile picture yet!
                    </div>
                }else{
                    <div class="form-field">
                        <img src="/images/@Model.AvatarName"  height="400" width="400" class="img-thumbnail" alt="@Model.AvatarName"/>
                    </div>
                }
                <div class="form-field">
                    <input asp-for="@Model.Avatar" type="file" accept="image/png, image/gif, image/jpeg" class="form-input" type="file"  aria-required="true" />
                    <span asp-validation-for="@Model.Avatar" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <input asp-for="@Model.Email" class="form-input"  type="email" aria-required="true" placeholder="email" required/>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                
                <div class="form-field">
                    <textarea asp-for="@Model.PersonalInfo" class="form-textarea" rows=6 placeholder="Some information about yourself..."  aria-required="true" >
                    </textarea>
                    <span asp-validation-for="@Model.PersonalInfo" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <button class="form-button">Update</button>
                </div>
            </form>
        </div>
        <div class="ml-1">
            <div class="card mb-3 mt-3 ml-3">
                <div class="card-body">
                    <div class="form-field ">
                        <a class="custom-href" href="@Url.Action("ChangePassword", "Account")">Change your password</a>
                    </div>
                </div>
            </div>
            
            <div class="card ml-3">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Active since: <span class="badge bg-info">Thu, 01 Jan 1993</span></li>
                    <li class="list-group-item">Country:      <span class="badge bg-info">BG</span></li>
                    <li class="list-group-item">Topics:       <span class="badge bg-info">14</span></li>
                    <li class="list-group-item">Posts:        <span class="badge bg-info">30</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>